<!DOCTYPE html>
<html lang="en">
<head><title>Movies</title></head>
<body>
  <h1>Movies List</h1>
  <ul>
    <% movies.forEach(movie => { %>
      <li>
        <h2><%= movie.name %></h2>
        <p>Director: <%= movie.director %></p>
        <p>Producer: <%= movie.producer %></p>
        <p>Release Date: <%= movie.release_date.toDateString() %></p>
        <img src="/<%= movie.image %>" alt="Movie Image" width="100">
        <form action="/delete-movie/<%= movie._id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
